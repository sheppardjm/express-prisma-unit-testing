generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int     @id @default(autoincrement())
  username String
  password String
  quotes   Quote[]
}

model Tag {
  id     Int     @id @default(autoincrement())
  name   String
  color  String
  quotes Quote[]
}

model Quote {
  id     Int    @id @default(autoincrement())
  text   String
  userId Int
  user   User   @relation(fields: [userId], references: [id])
  tags   Tag[]
}
